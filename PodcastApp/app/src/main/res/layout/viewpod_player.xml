<?xml version="1.0" encoding="utf-8"?>
<com.example.podcastapp.views.viewpods.PlayerViewpod
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:fastforward_increment="30000"
        app:rewind_increment="15000"
        app:show_timeout="0"
        app:hide_on_touch="false"
        app:controller_layout_id="@layout/custom_player"/>





        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Having a personalized domain name will make you stand out of the crowd Having a personalized domain name will make you stand out of the crowd Having a personalized domain name will make you stand out"
            android:textSize="@dimen/text_regular_2x"
            android:textColor="@color/textcolorPrimary"
            android:padding="@dimen/margin_medium_2"
            android:maxLines="4"
            android:lineSpacingMultiplier="1.3"
            android:background="@drawable/rc_gray_bg"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_below="@id/playerView"
            />

</com.example.podcastapp.views.viewpods.PlayerViewpod>